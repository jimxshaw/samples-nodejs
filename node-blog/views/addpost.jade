extends layout

block content
	h1=title
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post', action='/posts/add', enctype="multipart/form-data")
		.form-group
			label Title:
			input.form-control(name='title', type='text')
		.form-group
			label Category:
			select.form-control(name='category')
				each category, i in categories
					option(value='#{category.title}') #{category.title}
		.form-group
			label
			textarea.form-control(name='body', id='body', placeholder='Enter body text here...')
		.form-group
			label Add Image:
			input.form-control(name='mainimage', type='file')
		.form-group
			label Author:
			select.form-control(name='author')
				option(value='Catelyn Tully') Catelyn Tully
				option(value='Hodor') Hodor
				option(value='Loras Tyrell') Loras Tyrell
				option(value='Theon Greyjoy') Theon Greyjoy
				option(value='Other') Other
		input.btn.btn-default(name='submit',type='submit',value='Submit')
		script(src='/ckeditor/ckeditor.js')
		script
			| CKEDITOR.replace('body');